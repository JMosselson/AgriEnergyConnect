@model IEnumerable<ST10270629_PROG7311_POE.Models.ProductModel>

@{
    ViewData["Title"] = $"Products for {ViewBag.FarmerName}";
    var farmerId = ViewBag.FarmerId;
    var productTypes = ViewBag.ProductTypes as List<string> ?? new List<string>();
    var currentType = ViewBag.CurrentProductType as string;
    var currentStart = ViewBag.CurrentStartDate as string;
    var currentEnd = ViewBag.CurrentEndDate as string;
}

<h1>@ViewData["Title"]</h1>
<hr />

@* --- Filter Form --- *@
<form asp-action="ViewFarmerProducts" method="get" class="row g-3 align-items-end mb-4 p-3 border rounded bg-light">
     @* Hidden input to keep farmerId in the form submission *@
     <input type="hidden" name="farmerId" value="@farmerId" />

    <div class="col-md-3">
        <label for="productType" class="form-label">Product Type</label>
        <select name="productType" id="productType" class="form-select">
            <option value="">-- All Types --</option>
            @foreach (var type in productTypes)
            {
                <option value="@type" selected="@(type == currentType)">@type</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label for="startDate" class="form-label">Production Date From</label>
        <input type="date" name="startDate" id="startDate" class="form-control" value="@currentStart"/>
    </div>

    <div class="col-md-3">
         <label for="endDate" class="form-label">Production Date To</label>
        <input type="date" name="endDate" id="endDate" class="form-control" value="@currentEnd"/>
    </div>

    <div class="col-md-3">
         <button type="submit" class="btn btn-primary w-100">Filter</button>
         <a asp-action="ViewFarmerProducts" asp-route-farmerId="@farmerId" class="btn btn-secondary w-100 mt-1">Clear Filters</a>
    </div>
</form>
@* --- End Filter Form --- *@


@if (!Model.Any())
{
     if (!string.IsNullOrEmpty(currentType) || !string.IsNullOrEmpty(currentStart) || !string.IsNullOrEmpty(currentEnd))
     {
          <p>No products found matching the current filter criteria for this farmer.</p>
     }
     else
     {
        <p>This farmer has not added any products yet.</p>
     }
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductionDate)
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @* Format date for display *@
                    @item.ProductionDate.ToString("yyyy-MM-dd")
                </td>
            </tr>
    }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="FarmerList" class="btn btn-outline-secondary">Back to Farmer List</a>
</div>