@model IEnumerable<ST10270629_PROG7311_POE.Models.ApplicationUser>

@{
    ViewData["Title"] = "Find User to Designate as Farmer";
}

<h1>@ViewData["Title"]</h1>
<p>Select a registered user who is not currently an Employee or Farmer to create their Farmer profile and assign the Farmer role.</p>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning">No eligible users found to designate as Farmers. Users must register first and should not already be an Employee or Farmer.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => user.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => user.Email)</td>
                    <td>
                        <a asp-action="AssignFarmerProfile" asp-route-userId="@user.Id" class="btn btn-sm btn-success">Make Farmer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="FarmerList" class="btn btn-outline-secondary">Back to Farmer List</a>
</div>